<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical">

<TextView
android:id="@+id/textView2"
android:layout_width="match_parent"
android:layout_height="154dp"
android:gravity="center_vertical|end"
android:text="TextView"
android:textSize="60sp"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toTopOf="parent" />


<Button
android:id="@+id/button_divide"
android:layout_width="87dp"
android:layout_height="83dp"
android:background="@color/function_button"
android:text="/"
android:textSize="20sp"
app:layout_constraintBottom_toTopOf="@+id/button_mult"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintHorizontal_bias="0.645"
app:layout_constraintStart_toEndOf="@+id/button_bs"
app:layout_constraintTop_toBottomOf="@+id/textView2"
app:layout_constraintVertical_bias="0.192" />

<Button
android:id="@+id/button_ce"
android:layout_width="87dp"
android:layout_height="83dp"
android:layout_marginStart="16dp"
android:layout_marginBottom="4dp"
android:background="@color/function_button"
android:text="CE"
android:textSize="20sp"
app:layout_constraintBottom_toTopOf="@+id/button_7"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toBottomOf="@+id/textView2" />

<Button
android:id="@+id/button_bs"
android:layout_width="87dp"
android:layout_height="83dp"
android:layout_marginStart="16dp"
android:background="@color/function_button"
android:text="BS"
android:textSize="20sp"
app:layout_constraintBottom_toTopOf="@+id/button_9"
app:layout_constraintStart_toEndOf="@+id/button_c"
app:layout_constraintTop_toBottomOf="@+id/textView2"
app:layout_constraintVertical_bias="0.192" />

<Button
android:id="@+id/button_c"
android:layout_width="87dp"
android:layout_height="83dp"
android:layout_marginStart="16dp"
android:background="@color/function_button"
android:text="C"
android:textSize="20sp"
app:layout_constraintBottom_toTopOf="@+id/button_8"
app:layout_constraintStart_toEndOf="@+id/button_ce"
app:layout_constraintTop_toBottomOf="@+id/textView2"
app:layout_constraintVertical_bias="0.192" />

<Button
android:id="@+id/button_mult"
android:layout_width="87dp"
android:layout_height="83dp"
android:layout_marginBottom="4dp"
android:background="@color/function_button"
android:text="x"
android:textSize="14sp"
app:layout_constraintBottom_toTopOf="@+id/button_minus"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintHorizontal_bias="0.645"
app:layout_constraintStart_toEndOf="@+id/button_9" />

<Button
android:id="@+id/button_8"
android:layout_width="87dp"
android:layout_height="83dp"
android:layout_marginStart="16dp"
android:layout_marginBottom="4dp"
android:background="@color/number_button"
android:text="8"
android:textSize="20sp"
app:layout_constraintBottom_toTopOf="@+id/button_5"
app:layout_constraintStart_toEndOf="@+id/button_7" />

<Button
android:id="@+id/button_9"
android:layout_width="87dp"
android:layout_height="83dp"
android:layout_marginStart="16dp"
android:layout_marginBottom="4dp"
android:background="@color/number_button"
android:text="9"
android:textSize="20sp"
app:layout_constraintBottom_toTopOf="@+id/button_6"
app:layout_constraintStart_toEndOf="@+id/button_8" />

<Button
android:id="@+id/button_7"
android:layout_width="87dp"
android:layout_height="83dp"
android:layout_marginStart="16dp"
android:layout_marginBottom="8dp"
android:background="@color/number_button"
android:text="7"
android:textSize="20sp"
app:layout_constraintBottom_toTopOf="@+id/button_4"
app:layout_constraintStart_toStartOf="parent" />

<Button
android:id="@+id/button_2"
android:layout_width="87dp"
android:layout_height="83dp"
android:background="@color/number_button"
android:text="2"
android:textSize="20sp"
app:layout_constraintBottom_toTopOf="@+id/button_0"
tools:layout_editor_absoluteX="115dp" />

<Button
android:id="@+id/button_0"
android:layout_width="87dp"
android:layout_height="83dp"
android:background="@color/number_button"
android:text="0"
android:textSize="20sp"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintHorizontal_chainStyle="spread"
app:layout_constraintStart_toEndOf="@+id/button_negative" />

<Button
android:id="@+id/button_3"
android:layout_width="87dp"
android:layout_height="83dp"
android:layout_marginStart="16dp"
android:background="@color/number_button"
android:text="3"
android:textSize="20sp"
app:layout_constraintBottom_toTopOf="@+id/button_dot"
app:layout_constraintStart_toEndOf="@+id/button_2" />

<Button
android:id="@+id/button_4"
android:layout_width="87dp"
android:layout_height="83dp"
android:layout_marginStart="16dp"
android:layout_marginBottom="4dp"
android:background="@color/number_button"
android:text="4"
android:textSize="20sp"
app:layout_constraintBottom_toTopOf="@+id/button_1"
app:layout_constraintStart_toStartOf="parent" />

<Button
android:id="@+id/button_5"
android:layout_width="87dp"
android:layout_height="83dp"
android:layout_marginStart="16dp"
android:background="@color/number_button"
android:text="5"
android:textSize="20sp"
app:layout_constraintBottom_toTopOf="@+id/button_2"
app:layout_constraintStart_toEndOf="@+id/button_4" />

<Button
android:id="@+id/button_6"
android:layout_width="87dp"
android:layout_height="83dp"
android:layout_marginStart="16dp"
android:background="@color/number_button"
android:text="6"
android:textSize="20sp"
app:layout_constraintBottom_toTopOf="@+id/button_3"
app:layout_constraintStart_toEndOf="@+id/button_5" />

<Button
android:id="@+id/button_1"
android:layout_width="87dp"
android:layout_height="83dp"
android:background="@color/number_button"
android:text="1"
android:textSize="20sp"
app:layout_constraintBottom_toTopOf="@+id/button_negative"
app:layout_constraintEnd_toStartOf="@+id/button_2"
app:layout_constraintStart_toStartOf="parent" />

<Button
android:id="@+id/button_minus"
android:layout_width="87dp"
android:layout_height="83dp"
android:background="@color/function_button"
android:text="-"
android:textSize="20sp"
app:layout_constraintBottom_toTopOf="@+id/button_plus"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintHorizontal_bias="0.645"
app:layout_constraintStart_toEndOf="@+id/button_6" />

<Button
android:id="@+id/button_plus"
android:layout_width="87dp"
android:layout_height="83dp"
android:background="@color/function_button"
android:text="+"
android:textSize="20sp"
app:layout_constraintBottom_toTopOf="@+id/button_equal"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintHorizontal_bias="0.645"
app:layout_constraintStart_toEndOf="@+id/button_3" />

<Button
android:id="@+id/button_equal"
android:layout_width="87dp"
android:layout_height="83dp"
android:background="@color/function_button"
android:text="="
android:textSize="20sp"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintHorizontal_chainStyle="spread"
app:layout_constraintStart_toEndOf="@+id/button_dot" />

<Button
android:id="@+id/button_negative"
android:layout_width="87dp"
android:layout_height="83dp"
android:background="@color/function_button"
android:text="+/-"
android:textSize="20sp"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintHorizontal_chainStyle="spread"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintVertical_chainStyle="spread" />

<Button
android:id="@+id/button_dot"
android:layout_width="87dp"
android:layout_height="83dp"
android:background="@color/function_button"
android:text="."
android:textSize="20sp"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintHorizontal_chainStyle="spread"
app:layout_constraintStart_toEndOf="@+id/button_0" />


</androidx.constraintlayout.widget.ConstraintLayout>